<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="体重计算器"
        android:textSize="20sp"
        android:textColor="#ffff"
        android:textStyle="italic"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="35dp"
        android:id="@+id/textView7" />





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="我的身高："
        android:textSize="20sp"
        android:id="@+id/textView9"
        android:layout_alignBottom="@+id/height"
        android:layout_toLeftOf="@+id/height"
        android:layout_toStartOf="@+id/height" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="我的体重："
        android:textSize="20sp"
        android:id="@+id/tz"
        android:layout_alignBottom="@+id/weight"
        android:layout_toLeftOf="@+id/weight"
        android:layout_toStartOf="@+id/weight" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="目标体重："
        android:textSize="20sp"
        android:layout_alignBottom="@+id/aim"
        android:layout_toLeftOf="@+id/weight"
        android:layout_toStartOf="@+id/weight" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="设置一个昵称"
        android:gravity="center"
        android:id="@+id/name"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="18dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:hint="单位 cm"
        android:gravity="center"
        android:inputType="number"
        android:id="@+id/height"
        android:layout_above="@+id/weight"
        android:layout_alignLeft="@+id/weight"
        android:layout_alignStart="@+id/weight"
        android:layout_marginBottom="38dp" />

    <EditText
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:id="@+id/weight"
        android:hint="单位 kg"
        android:gravity="center"
        android:layout_marginBottom="38dp"
        android:inputType="number"
        android:layout_above="@+id/aim"
        android:layout_alignLeft="@+id/aim"
        android:layout_alignStart="@+id/aim" />
    <EditText
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:id="@+id/aim"
        android:hint="单位 kg"
        android:gravity="center"
        android:inputType="number"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_above="@+id/btn"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7"
        android:layout_marginBottom="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认"
        android:id="@+id/btn"
        android:background="@drawable/buttonpress"
        android:layout_marginTop="40dp"
        android:layout_above="@+id/name"
        android:layout_centerHorizontal="true" />
 <Button
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:id="@+id/btn2"
     android:text="关于"
     android:textStyle="italic"
     android:textSize="18sp"
     android:background="@drawable/buttonpress2"
     android:layout_alignBottom="@+id/textView7"
     android:layout_alignParentRight="true"
     android:layout_alignParentEnd="true" />

</RelativeLayout>




