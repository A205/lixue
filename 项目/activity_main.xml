<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/bc6">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="身体健康指数计算"
        android:id="@+id/textView"
        android:textSize="20sp"
        android:layout_marginTop="71dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="身高（厘米）："
        android:textSize="20sp"
        android:id="@+id/textView3"
        android:background="@drawable/shape"

        android:layout_alignTop="@+id/height"
        android:layout_toLeftOf="@+id/height"
        android:layout_toStartOf="@+id/height" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="体重（千克）："
        android:textSize="20sp"
        android:id="@+id/textView2"
        android:layout_below="@+id/height"
        android:layout_toLeftOf="@+id/height"
        android:layout_toStartOf="@+id/height"
        android:layout_marginTop="66dp" />

    <EditText
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/bmi_board"
        android:id="@+id/height"
        android:text="      "
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="109dp" />

    <EditText
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:id="@+id/weight"
        android:background="@drawable/bmi_board"
        android:text="      "
        android:layout_alignTop="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/button"
        android:text="计算"
        android:id="@+id/btn"
        android:layout_below="@+id/weight"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginTop="34dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="80sp"
        android:id="@+id/result"
        android:textSize="15sp"
        android:hint=""
        android:layout_alignTop="@+id/btn"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />


</RelativeLayout>
